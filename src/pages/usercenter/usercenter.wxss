/* usercenter.wxss */

.usermotto {
  margin-bottom: 30px;
}

.user-center {
  padding: 0 0 15px;
}

.tip-info {
  padding: 10px 20px;
}

.camera-list {
  display: flex;
  flex-wrap: wrap;
}

.camera-box {
  padding: 5px 10px;
  width:20%;
  box-sizing: border-box;
}

.camera-item {
  display: flex;
  flex-direction: column;
}

.camera-item image {
  border-radius: 8px;
  width: 55px;
  height: 55px;
}

.camera-item text {
  text-align: center;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 12px;
  padding:4px 0;
}

.progress-bar {
  border-radius: 8px;
  padding: 15px;
  color: #666;
  font-size: 12px;
  position: relative;
}

progress {
  border: 1px solid #0c3;
  border-radius: 13px;
  overflow: hidden;
}

.bar-detail {
  position: absolute;
  right: 30px;
  top: 50%;
  transform: translateY(-50%);
  z-index: 999;
}

.help {
  padding: 0 15px;
  display:flex;
  justify-content: flex-end;
}
.help  button{
  margin:0;
}
button[type="primary"]{
  background: #0c3;
}




/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top:80rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
  font-size: 28rpx;
}
.userhelp {
  position: absolute;
  top: 15px;
  right: 8px;
}
.help {
  background-color: #fff;
  font-size: 24rpx;
  border-radius: 40px;
}
.help::after {
  border-radius: 40px;
}
.userassets {
  width: 100%;
  font-size: 24rpx;
  color: #bbb;
  margin-top: 90rpx;
}
.userassets .assetslist {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding-bottom:14px;
}
.assetslist .assets-common {
  flex: 1;
  border-right: 1px solid #ccc;
  text-align: center;
}
.assets-common:last-child {
  border-right: none;
}
.assetslist .assets-common .icon {
  color: #000;
  font-weight: bold;
  display: block;
}
