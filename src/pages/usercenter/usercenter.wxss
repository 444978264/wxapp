/* usercenter.wxss */
.userhelp {
  position: absolute;
  top: 15px;
  right: 8px;
}
.help {
  background-color: #fff;
  font-size: 24rpx;
  border-radius: 40px;
}
.help::after {
  border-radius: 40px;
}
.userassets {
  width: 100%;
  font-size: 24rpx;
  color: #bbb;
  margin-top: 90rpx;
}
.userassets .assetslist {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding-bottom:14px;
}
.assetslist .assets-common {
  flex: 1;
  border-right: 1px solid #ccc;
  text-align: center;
}
.assets-common:last-child {
  border-right: none;
}
.assetslist .assets-common .icon {
  color: #000;
  font-weight: bold;
  display: block;
}
.userinfo {
  text-align: center;
  padding-top: 50px;
}
.user-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.ad_bg {
  width: 100%;
  margin-top: 10px;
}
.ad_bg image {
  width: 100%;
}
.invite-list {
  margin-top: 5px;
  background-color: #fff;

}
.invite-title {
  padding: 6px 10px;
  border: 1px solid #f0f0f0;
  display: flex;
  align-items: center;
}
.friendNums {
  flex: 3;
}
.codeImg {
  width: 24px;
  height: 24px;
  display: block;
  margin: 0 auto;
}

.invite-friends {
  text-align: center;
  padding: 30rpx 0;
}
.friends {
  border: 1px solid #46a541;
  border-radius: 20px;
  padding: 14rpx 120rpx;
  color: #46a541;
  margin-top: 10px;
  display: inline-block;
  background-color: transparent;
  font-size: 14px;
  line-height: 1;
}
.friends::after {
  width: 0;
  height: 0;
}
.friend-info {
  padding: 5px 10px;
  display: flex;
  text-align: left;
  box-sizing: border-box;
}
.friend-ico {
  width: 100rpx;
  height: 100rpx;
  border-radius: 4px;
  border: 1px solid #2099f2;
  display: block;
  margin-right: 8px;
}
.info {
  flex: 3;
  display: flex;
}
.get_count {
  flex: 1;
  color: #ccc;
  text-align: right;
  padding-top: 14rpx;
}
.send_count {
  margin-top: 18rpx;
  color: #ccc;
  font-size: 24rpx;
}
.count {
  color: #000;
}
.showBigCode {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  z-index: 99;
  display: none;
}
.showBigCode.on {
  display: block;
}
.bigCode {
  width: 100%;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  z-index: 888;
}