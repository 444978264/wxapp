.packetslist {
  width: 100%;
  font-size: 28rpx;
  color: #fff;
  padding: 10px 0;
  background-color: #f0f0f0;
}
.every-packet {
  width: 80%;
  margin: 0 auto;
  margin-bottom: 50rpx;
  background-color: #fd595a;
  box-sizing: border-box;
  border-radius: 6px;
  overflow:hidden;
}
.title {
  width: 100%;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 36rpx;
  padding: 15px 10px 10px 10px;
  box-sizing: border-box;
}
.content {
  padding: 0 10px 15px 10px;
  box-sizing: border-box;
}
.type {
  background-color: #fff;
  padding: 2px 0;
  color: #ccc;
  text-indent: 10rpx;
}