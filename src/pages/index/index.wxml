<view class="page">
    <view class="header">
        <view class="rich rank" style="background:#feb207;height:80px;width:80px;border-radius:50%;">
            <text style="color:#cc5e23;font-size:14px;">今日土豪</text>
        </view>
        <view class="great rank" style="background:#dd380a;height:80px;width:80px;border-radius:50%;">
            <text style="color:#f8dc17;font-size:14px;">手气最佳</text>
        </view>
        <view class="rank-count">
            <view class="content">
                <text>{{totalResult.access_count}}</text>
                <text class="subtitle">今日红包数</text>
            </view>
            <view class="content">
                <text>{{totalResult.all_get_count}}</text>
                <text class="subtitle">抢到人数</text>
            </view>
            <view class="content">
                <text>{{totalResult.total}}</text>
                <text class="subtitle">今日访问量</text>
            </view>
        </view>
    </view>
    <view class="list">
        <view class="list-item {{item.status!=2?'default':'disabled'}}"  wx:for="{{list}}" wx:key="{{index}}">
            <view wx:if="{{item.status!=2}}" class="avatar">
                <image style="width:100%" mode="widthFix" src="{{item.user.head_ico}}" />
            </view>
            <view class="red-content" data-id="{{item.id}}">
                <view>
                    <image style="width:30px;padding-top:5px;" mode="widthFix" src="../../img/voice2.svg" />
                </view>
                <view class="red-command">
                    <view class="title">
                        <text style="font-size:16px;color:#fff">{{item.type=="normal"?"":"[广告红包]"}}{{item.title}}</text>
                    </view>
                    <text class="subtitle">共{{item.total_count}}份,剩余{{item.leave_count}}份</text>
                </view>
                 <view class="subtitle">
                    <text>来自 {{item.user.nickname}}</text>
                </view>
            </view>
            <view wx:if="{{item.status==2}}" class="avatar">
                <image style="width:100%" mode="widthFix" src="{{item.user.head_ico}}" />
            </view>
        </view>
    </view>
    <view class="publish">
        <button type="default" size="defaultSize" bindtap="publishRed" hover-class="defaultTap">发红包</button>
    </view>
</view>