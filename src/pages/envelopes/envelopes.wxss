.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #000;
  opacity: 0.6;
  z-index: 88;
  display: none;
}
.mask.show {
  display: block;
}
.img-icon {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 4rpx;
}
.pattern {
  width: 100%;
  font-size: 28rpx;
}
.pattern-title {
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 4%;
  text-align: center;
}
.pattern-list {
  flex: 1;
}
.line {
  width: 240rpx;
  height: 2px;
  background-color: transparent;
  display: block;
  margin: 0 auto;
  margin-top: 4%;
}
.pattern-list.cur {
  color: #fb5859;
}
.pattern-list.cur .line {
  background-color: #fb5859;
}
.advertisement, .entertainment {
  padding-top: 20rpx;
}
.input-common {
  position: relative;
  background-color: #fff;
  border-radius: 4px;
  width: 95%;
  margin: 0 auto;
  margin-bottom: 20rpx;
  display: flex;
  box-sizing: border-box;
  padding: 10px 6px;
}
.input-title {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.input-content {
  flex: 2;
  overflow: hidden;
  text-align: right;
}
.unit {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-left: 4px;
}
.way {
  display: inline-block;
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
  color: #ccc;
}
.moreoption {
  display: block;
  overflow: hidden;
}
.more {
  width: 14px;
  float: right;
}
.moreline {
  width: 100%;
  height: 4rpx;
  background-color: #000;
}
.option-name {
  display: none;
}
.option-name.show {
  display: block;
}
.margin-bottom-2 {
  margin-bottom: 2px;
}
.up-img-icon {
  display: block;
  width: 40px;
  height: 40px;
}
.up-img-icon.hide {
  display: none;
}
.toEdit {
  color: #ccc;
  width: 60%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  text-align: right;
}
.generate {
  width: 95%;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  background-color: #fb5859;
  margin-top: 5%;
  padding: 8rpx 0;
}
.region {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #f0f0f0;
  text-align: center;
  z-index: 888;
  transform: translateY(100%);
  transition: all 0.5s;
}
.region.show {
  transform: translateY(0);
}
.region-common {
  background-color: #fff;
  padding: 10px 0;
  margin-bottom: 1px;
}
.cancel {
  margin-bottom: 0;
  margin-top: 4px;
}
.toCheck {
  position: relative;
  top: -10rpx;
}