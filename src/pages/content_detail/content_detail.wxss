.main{
    padding:0 10px;
}
.header{
    padding:5px 0;
    display:flex;
    justify-content: space-between;
    align-items: center;
}
.info{
    display:flex;
    justify-content: flex-start;
    align-items: center;
    flex:1;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.ps{
    padding:3px 10px;
    color:#e50000;
    border:1px solid #e50000;
    border-radius:11.5px;
}
.tip{
    background:#f8f8f8;
    color:#a6a6a6;
    padding:40px;
    text-align: center;
}
.hit-count{
    padding:10px 0;
    font-size:14px;
    color:#d2d2d2;
}
.btn-group{
    margin-top:30px;
    padding:3px 10px;
}