page{
  height:100%;
  background:#39383d;
}
.header{
  padding:20rpx;
  display:flex;
  justify-content: flex-start;
}
.info{
  padding-left:16rpx;
  color:#fff;
  font-size: 26rpx;
}
.statement{
  background:#a2e65b;
  color:rgba(0,0,0,.95);
  padding:20rpx 12rpx;
  border-radius:10rpx;
  position: relative;
}
.statement::before{
  content:'';
  position:absolute;
  left:0;
  transform: rotate(-45deg) translateX(-50%);
  width:20rpx;
  height:20rpx;
  background:#a2e65b;
}

.main{
  height:50%;
  position:absolute;
  bottom:0;
  width:100%;
  display:flex;
  justify-content:center;
  align-items:center;
}
.container{
  flex-grow: 1;
  background:#c33b25;
  height:100%;
  display:flex;
  align-items:center;
  justify-content: center;
  position: relative;
  z-index:33;
}
.content{
  background:#fff6e4;
  padding:40rpx 40rpx 120rpx;
  position:absolute;
  left:50%;
  width:70%;
  border-radius: 10rpx;
  bottom:100%;
  transform:translate(-50%,30%);
  text-align:center;
}

.footer{
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.record-btn{
  width:80rpx;
  height: 80rpx;
  background:#fec93b;
  padding:20rpx;
  border-radius:50%;
  box-shadow:2rpx 4rpx 4rpx 2rpx rgba(0,0,0,.45)
}
.tip{
  font-size:24rpx;
  font-weight:600;
  line-height:80rpx;
  color:#7a3629;
}
navigator{
  color:#66a2d4;
}