.mask {
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #000;
  opacity: 0.6;
  z-index: 88;
  display: none;
}
.mask.show {
  display: block;
}
.ad_details {
  font-size: 28rpx;
  color: #bbb;
  padding: 10px 10px 0;
  width: 100%;
  box-sizing: border-box;
}
.details {
  text-align: center;
  position: relative;
}
.btns {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 9;
}

.btns-common {
  flex: 1;
  background-color: #fff;
  font-size: 28rpx;
  border-radius: 0;
  padding: 3px 0;
  display: block;
  width: 100%;
}
.btns-common::after {
  border: none;
}
.finish {
  color: #fff;
  background-color: #2ca941;
}
.addContent {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  text-align: center;
  transform: translateY(100%);
  transition: all 0.5s;
  background-color: #f0f0f0;
}
.addContent.show {
  transform: translateY(0);
}
.con-common {
  color: #000;
  background-color: #fff;
  padding: 10px 0;
  margin-bottom: 1px;
}
.cancel {
  margin-bottom: 0;
  margin-top: 4px;
}
.add-btn {
  margin-top: 5%;
  border: 1px solid #bbb;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 28rpx 0;
}
.con-details {
  width: 100%;
  background-color: #fff;
  border-radius: 4px;
  height: 80px;
  text-align: left;
  box-sizing: border-box;
  padding: 8px;
}
.section {
  margin-bottom: 10px;
  position: relative;
}
.delete-icon {
  position: absolute;
  left: -8px;
  top: -8px;
  z-index: 8;
}
.con-details {
  overflow: hidden;
  display: flex;
}
.text-con {
  flex:2;
  height: 100%;
}